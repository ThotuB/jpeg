---
import TerminalText from './TerminalText.tsx';

interface Props {
	text?: string[];
	subtext?: string;
	children?: any;
}

const { text = [], subtext } = Astro.props as Props;
---

<div class='flex flex-row mxl:flex-col mxl:gap-6'>
	<div class='flex-1 flex flex-row justify-evenly gap-4 items-center px-4 mxs:flex-col'>
		<slot />
	</div>
	<div class='flex-1 flex flex-col gap-6 font-mono font-bold text-xl px-2 mxl:px-4 mxl:text-base'>
		<div class='flex-1 text-secondary skew-x-6 mxs:skew-x-0'>
			<TerminalText text={text} client:visible />
		</div>
		{
			subtext && (
				<div class='text-retro-3 text-right -skew-x-6'>
					<p class='px-6'>$ {subtext}</p>
				</div>
			)
		}
	</div>
</div>
