---
interface Props {
	title: string
	class: string
}

const { title, class: className } = Astro.props
---

<div class="flex flex-row py-6">
	<div class="flex flex-1">
		<div class={`${className} -rotate-3 -skew-x-3 flex-1 -mr-1`}></div>
		<div class={`${className} -mr-1 rotate-3 skew-x-3 flex flex-col justify-center`}>
			<h2 class="px-6 py-4 text-3xl font-black uppercase text-primary mxs:text-2xl">
				{title}
			</h2>
		</div>
		<div class={`${className} hidden mxl:block -rotate-3 -skew-x-3 flex-1 -mr-1`}></div>
	</div>
	<div class="flex-1 mxl:hidden"></div>
</div>
<div class="flex flex-col pb-12 pt-2">
	<slot />
</div>
